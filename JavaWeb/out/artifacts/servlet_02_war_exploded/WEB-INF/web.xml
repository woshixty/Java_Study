<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <context-param>
        <param-name>username</param-name>
        <param-value>hello_context</param-value>
    </context-param>





    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.xty.servlet.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servlet_no2</servlet-name>
        <servlet-class>com.xty.servlet.HelloServlet2</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Servlet_context</servlet-name>
        <servlet-class>com.xty.servlet.Servlet_context</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servlet_no2</servlet-name>
        <url-pattern>/hello_no2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Servlet_context</servlet-name>
        <url-pattern>/context</url-pattern>
    </servlet-mapping>

</web-app>